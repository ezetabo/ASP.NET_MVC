@{
    ViewData["Title"] = "ComboBox";
}

<h1>Combobox</h1>

<select>
    <option value="1">Lunes</option>
    <option value="2">Martes</option>
    <option value="3">Miercoles</option>
    <option value="4">Jueves</option>
    <option value="5">Viernes</option>
    <option value="6">Sabado</option>
    <option value="7">Domingo</option>
</select>
<select id="cboCategorias">
    <option value="1">Bebidas</option>
    <option value="2">Cosmeticos</option>
    <option value="3">Verduras</option>
    <option value="4">Frutas</option>
</select>

<input type="button" id="btnValor" value="Obtner ID" />

<script>
    var btnValor = document.getElementById("btnValor");
    btnValor.onclick = function () {
        //obtener todo el cbo
        var cboCategorias = document.getElementById("cboCategorias");
        //obtener el indice
        var index = cboCategorias.selectedIndex;
        //obtner el nombre de cada iten seleccionado
        var nombre = cboCategorias.options[index].textContent;
        //obtener el id de cada seleccion
        var id = cboCategorias.value;

        alert(`${nombre} tiene el ID: ${id}`);

    }
</script>
